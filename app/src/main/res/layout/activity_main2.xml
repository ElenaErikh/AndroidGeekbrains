<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/AddProfileTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_profile"
            android:textColor="@android:color/holo_purple"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/profileImage"
            android:src="@drawable/avatar_12"
            tools:srcCompat="@tools:sample/avatars[19]" />

        <EditText
            android:id="@+id/AddPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="enter name"
            android:hint="@string/user_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/AddPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="enter phone number"
            android:ems="10"
            android:hint="@string/phone_number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/AddEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="enter email"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textWebEmailAddress" />

        <EditText
            android:id="@+id/AddAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="enter address"
            android:hint="@string/address"
            android:inputType="textPostalAddress" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender1"
                android:checked="true"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender2"/>
        </RadioGroup>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>