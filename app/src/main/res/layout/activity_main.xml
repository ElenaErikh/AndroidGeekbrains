<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#0A000BD4">

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profileImage"
            android:textColor="@android:color/holo_purple"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/profileImage"
            android:src="@drawable/avatar_8"
            tools:srcCompat="@tools:sample/avatars[14]" />

        <TextView
            android:id="@+id/nameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="18sp"
            android:textColor="@color/purple_500"
            />

        <TextView
            android:id="@+id/PersonName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username1"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/phoneNumberView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number_view"
            android:textSize="18sp"
            android:textColor="@color/purple_500"
            />

        <TextView
            android:id="@+id/PhoneNumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phoneNumber1"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/EmailView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_view"
            android:textSize="18sp"
            android:textColor="@color/purple_500"
            />

        <TextView
            android:id="@+id/Email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email1"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/switchNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <ToggleButton
            android:id="@+id/toggleBlockBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00BCD4"
            android:textOff="@string/textOff"
            android:textOn="@string/textOn"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>